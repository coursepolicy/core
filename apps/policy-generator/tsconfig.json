{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "isolatedModules": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    ".next/types/**/*.ts",
    "**/*.tsx",
    "**/**/*.tsx",
    "**/**/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
